{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Video Pipeline Editor",
  "version": "0.1.0",
  "identifier": "io.github.barckley75.video-pipeline-editor",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Video Pipeline Editor",
        "width": 1600,
        "height": 900,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": "default-src 'self'; media-src 'self' asset: https://asset.localhost; connect-src 'self' https:; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'",
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Capability for the main window",
          "windows": ["main"],
          "permissions": [
            "core:default",
            "core:app:default",
            "core:window:default",
            "core:webview:default",
            "core:path:default",
            "core:event:default",
            "core:resources:default",
            "dialog:default",
            "opener:default"
          ]
        }
      ],
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "dmg",
      "msi"
    ],
    "icon": [
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "license": "LICENSE",
    "resources": [
      "resources/*",
      "LICENSE"
    ],
    "macOS": {
      "minimumSystemVersion": "10.13",
      "entitlements": "entitlements.plist",
      "signingIdentity": "-",
      "hardenedRuntime": true
    }
  }
}